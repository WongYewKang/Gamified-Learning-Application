#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    const int MAX_ENTRIES = 50;
    const int MAX_VALUE = 10;

    int data[MAX_ENTRIES];
    int countFrequency[MAX_VALUE + 1] = {0};  
    int numEntries = 0;
    int userInput;

    // Section A
    cout << "**************\n";
    cout << "(A) Input Data\n";
    cout << "**************\n\n";
    cout << "Enter integers between 0 and 10 (Ctrl + Z to end):\n";
    
    while (numEntries < MAX_ENTRIES) {
        cin >> userInput;
        
        if (userInput >= 0 && userInput <= MAX_VALUE) {
            numEntries++;
            data[numEntries] = userInput;
            countFrequency[userInput]++;
            if (numEntries < MAX_ENTRIES) {  
                cout << "Enter next integer: ";
            }
        } else {
            cout << "Number out of range. Please enter a number between 0 and 10.\n";
            cout << "Enter next integer: ";
        }

         if (cin.eof()) {  // Check for end-of-file input
            break;
        }

    }

    cout << "\nTotal entries received: " << numEntries << endl;

    // Section B
    cout << "\n\n**************\n";
    cout << "(B) Data Plot\n";
    cout << "**************\n\n";
    cout << "0123456789A\n";
    for (int i = 0; i <= MAX_VALUE; i++) {
        cout << "_";
    }

    cout << "\n";
    int indexMin = 0;
    int indexMax = 0;

    for (int i = 1; i < numEntries; i++) {
        if (data[i] < data[indexMin]) {
            indexMin = i;
        }
        if (data[i] > data[indexMax]) {
            indexMax = i;
        }
    }

    for (int i = 0; i < numEntries; i++) {
        for (int j = 0; j < data[i]; j++) {
            cout << " ";
        }

        if (i == indexMin) {
            cout << "* <\n";  
        } else if (i == indexMax) {
            cout << "* >\n";  
        } else {
            cout << "+\n"; 
        }
    }

    // Section C
    cout << "\n\n**************\n";
    cout << "(C) Histogram:\n";
    cout << "**************\n\n";
    cout << "0123456789A\n";
    for (int i = 0; i <= MAX_VALUE; i++) {
        cout << "_";
    } 

    int max = 0;
    for (int i = 0; i <= MAX_VALUE; i++) {
        if (countFrequency[i] > max) {
            max = countFrequency[i];
        }
    }

    for (int i = max; i > 0; i--) {
        for (int value = 0; value <= MAX_VALUE; value++) {
            if (countFrequency[value] >= i) {
                cout << "*";
            } else {
                cout << " ";
            }
        }
    }

    return 0;
}
